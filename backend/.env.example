# Database (Digital Ocean Managed PostgreSQL or local)
DATABASE_URL=postgresql://triforce:triforce_dev@localhost:5432/triforce

# Redis (Digital Ocean Managed Redis or local)
REDIS_URL=redis://localhost:6379

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d

# Strava OAuth
STRAVA_CLIENT_ID=your-strava-client-id
STRAVA_CLIENT_SECRET=your-strava-client-secret
STRAVA_REDIRECT_URI=http://localhost:3001/api/strava/callback
STRAVA_WEBHOOK_VERIFY_TOKEN=your-webhook-verify-token

# Frontend URL (for OAuth redirects)
FRONTEND_URL=http://localhost:5173

# Server
PORT=3001
NODE_ENV=development

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# Logging
LOG_LEVEL=debug
